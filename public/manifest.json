{
  "manifest_version": 2,
  "name": "Trail Extension",
  "version": "1.3.5",
  "description": "Trail Extension - A Chrome Extension for testing accessibility of a webpage.",
  "browser_action": {
    "default_title": "Trail Extension",
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "favicon.png",
    "32": "favicon.png",
    "48": "favicon.png",
    "128": "favicon.png"
  },
  "permissions": [
    "<all_urls>",
    "tabs",
    "activeTab",
    "storage",
    "https://cdn.jsdelivr.net/*"
  ],
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "content_security_policy": "script-src 'self' https://cdn.jsdelivr.net; object-src 'self'",
  "content_scripts": [
    {
      "js": [
        "content.js"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ],
  "web_accessible_resources": [
    "index.html",
    "html2canvas.min.js",
    "scally.js",
    "scally.min.js"
  ]
}