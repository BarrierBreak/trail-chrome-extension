{
  "manifest_version": 3,
  "name": "Trail Extension",
  "version": "1.2.9",
  "description": "Trail Extension - A Chrome Extension for testing accessibility of a webpage.",
  "action": {
    "default_title": "Trail Extension",
    "default_popup": "popup.html"
  },
  "host_permissions": ["*://*/*", "<all_urls>"],
  "permissions": [
    "scripting",
    "tabs",
    "activeTab",
    "nativeMessaging",
    "storage"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "externally_connectable": {
    "matches": ["http://*/*", "https://*/*", "file:///*"]
  },
  "content_scripts": [
    {
      "js": ["content.js", "scally.js"],
      "matches": ["http://*/*", "https://*/*", "file:///*", "<all_urls>"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["index.html", "html2canvas.min.js"],
      "matches": ["https://*/*", "http://*/*", "file:///*", "<all_urls>"]
    }
  ]
}
