{
  "manifest_version": 3,
  "name": "Trail Extension",
  "version": "2.0.0",
  "description": "Trail Extension - A Chrome Extension for testing accessibility of a webpage.",
  "action": {
    "default_title": "Trail Extension",
    "default_popup": "src/popup/index.html"
  },
  "icons": {
    "16": "favicon.png",
    "32": "favicon.png",
    "48": "favicon.png",
    "128": "favicon.png"
  },
  "host_permissions": ["*://*/*", "<all_urls>"],
  "permissions": [
    "scripting",
    "debugger",
    "tabs",
    "activeTab",
    "nativeMessaging",
    "storage"
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },
  "devtools_page": "src/devtools/index.html",
  "background": {
    "service_worker": "background.js"
  },
  "externally_connectable": {
    "matches": ["http://*/*", "https://*/*", "file:///*"]
  },
  "content_scripts": [
    {
      "js": ["content.js", "scally.js"],
      "matches": ["http://*/*", "https://*/*", "file:///*", "<all_urls>"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["index.html"],
      "matches": ["https://*/*", "http://*/*", "file:///*", "<all_urls>"]
    }
  ]
}
